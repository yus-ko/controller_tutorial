<launch>
   <group ns="/robot_0">
      <node pkg="controller_tutorial" name="controller_tutorial_test" type="controller_tutorial_test" output="screen">

         <param name="topic_cmd"       value="cmd_vel"/>
         <param name="topic_odom"      value="odom"/>
         <param name="topic_goal"      value="goal"/>
         
         <!-- 移動制御のパラメータ -->
         <param name="gain_p"                                  value="1.0"/>
         <param name="gain_i"                                  value="0.1"/>
         <param name="gain_d"                                  value="0.001"/>
         <param name="stop_margin_angle"                       value="0.2"/>
         <param name="stop_margin_distance"                    value="0.05"/>
         <param name="max_linear_velocity"                     value="0.3"/>
         <param name="max_angular_velocity"                    value="0.3"/>
      </node>

      <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find controller_tutorial)/rviz/controller_test.rviz"/>
   </group>
</launch>
